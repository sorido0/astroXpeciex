---
interface Props {
    id: string;
    img: string;
    success: boolean;
    flightNumber: number;
    details: string | null;
}

const { id, details, img, success, flightNumber } = Astro.props;
const sucessText = success ? "Exitoso" : "Fallido";
---

<a
    href={`/launch/${id}`}
    class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:gb-gray-700 hover:border-gray-500 transition flex flex-col items-center justify-center p-4"
>
    <picture class="flex justify-center p-4">
        <img
            class="mb-5 rounded-lg p-4"
            src={img}
            alt={`Patch for lounch ${id}}`}
        />
    </picture>

    <header class="p-4 flex-row">
        <span
            class:list={[
                "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
                {
                    "bg-green-100 text-green-800": success,
                    "bg-red-100 text-red-800": !success,
                },
            ]}
            class=`text-xs font-semibold mr-2 px-2.5 py-0.5 rounded`
        >
            {sucessText}
        </span>

        <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
            Flight #{flightNumber}
        </h2>

        <p class="mb-4 font-light text-gray-400">
            {
                details != null && details?.length > 100
                    ? `${details.substring(0, 100)}...`
                    : details
            }
        </p>
    </header>
</a>
